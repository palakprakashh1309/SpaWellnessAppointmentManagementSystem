@model SpaWellnessAppointmentManagementSystem.Repo.Models.Staffs
@using SpaWellnessAppointmentManagementSystem.Repo
@{
    ViewData["Title"] = "Staff Dashboard";
    Layout = null;
    var fullName = ViewBag.StaffName ?? "Staff Member";
    var appointments = ViewBag.Appointments as IEnumerable<dynamic> ?? new List<dynamic>();
    var completed = ViewBag.CompletedAppointments as IEnumerable<dynamic> ?? new List<dynamic>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-purple: #9333ea;
            --soft-bg: #fdf2f8;
            --purple-light: #f3e8ff;
        }

        body {
            background: linear-gradient(135deg, #fdf2f8 0%, #f3e8ff 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            background: white !important;
            border-bottom: 2px solid #f3e8ff;
        }

        .brand-text {
            font-weight: 700;
            color: var(--primary-purple);
        }

        .card {
            border-radius: 15px;
            border: none;
            box-shadow: 0 4px 6px rgba(0,0,0,0.02);
        }

        .schedule-card {
            border-left: 5px solid var(--primary-purple);
            transition: 0.3s;
        }

            .schedule-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.05) !important;
            }

        .staff-avatar-placeholder {
            width: 100px;
            height: 100px;
            background: linear-gradient(to bottom right, #a855f7, #ec4899);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 40px;
            color: white;
            margin: 0 auto;
        }

        .notes-box {
            background-color: #e0f2fe;
            color: #0369a1;
            border-radius: 8px;
            padding: 12px;
            font-size: 0.85rem;
            border-left: 4px solid #38bdf8;
        }

        .nav-pills .nav-link.active {
            background-color: var(--primary-purple);
        }

        .nav-pills .nav-link {
            color: #6b7280;
            font-weight: 500;
            border-radius: 10px;
            border: 1px solid #dee2e6;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center" href="#"><span class="me-2">✨</span><span class="brand-text">Serenity Spa - Staff Portal</span></a>
            <div class="ms-auto d-flex align-items-center gap-3">
                <span class="text-muted d-none d-md-inline">Welcome, <strong>@fullName</strong></span>
                <a href="/Dashboard/Logout" class="btn btn-outline-danger btn-sm"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </div>
    </nav>

    <div class="container-fluid px-4 py-5">
        @if (TempData["UpdateSuccess"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show border-0 mb-4 shadow-sm" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["UpdateSuccess"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row g-4">
            <div class="col-lg-3">
                <div class="card p-4 text-center shadow-sm">
                    <div class="mb-3">
                        @if (Model != null && !string.IsNullOrEmpty(Model.ProfilePicture))
                        {
                            <img src="@Model.ProfilePicture" class="rounded-circle mx-auto" style="width:100px; height:100px; object-fit: cover; border: 3px solid white; box-shadow: 0 4px 10px rgba(0,0,0,0.1);" alt="Profile" />
                        }
                        else
                        {
                            <div class="staff-avatar-placeholder mb-3">👤</div>
                        }
                    </div>
                    <h4 class="fw-bold mb-1">@fullName</h4>
                    <span class="badge bg-purple-light text-dark mb-3 px-3 py-2 border">@(Model?.Specialization ?? "Wellness Therapist")</span>
                    <p class="text-muted small"><em>"@Model?.Bio"</em></p>
                    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded-3 mb-3">
                        <span class="small fw-bold">Status:</span>
                        <span class="badge @(Model?.IsActive == true ? "bg-success" : "bg-secondary")">@(Model?.IsActive == true ? "Available" : "Busy")</span>
                    </div>
                    <button class="btn btn-outline-primary btn-sm w-100" data-bs-toggle="modal" data-bs-target="#editProfileModal">Edit Profile</button>
                </div>
            </div>

            <div class="col-lg-9">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div><h2 class="fw-bold mb-0">My Schedule</h2><p class="text-muted small">Manage your upcoming spa sessions</p></div>
                    <div class="text-end"><p class="mb-0 text-muted small">Current Date</p><h6 class="fw-bold">@DateTime.Now.ToString("MMMM dd, yyyy")</h6></div>
                </div>

                <ul class="nav nav-pills mb-4" id="pills-tab">
                    <li class="nav-item"><button class="nav-link active" data-bs-toggle="pill" data-bs-target="#today">Today's Bookings</button></li>
                    <li class="nav-item"><button class="nav-link" data-bs-toggle="pill" data-bs-target="#history">Completed</button></li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane fade show active" id="today">
                        @if (appointments.Any())
                        {
                            @foreach (var appt in appointments)
                            {
                                <div class="card p-4 mb-3 schedule-card shadow-sm">
                                    <div class="row align-items-center">
                                        <div class="col-md-8">
                                            <div class="d-flex align-items-center mb-2">
                                                <h5 class="fw-bold mb-0 me-3 text-purple">@appt.ServiceName</h5>
                                                <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">@appt.Status</span>
                                                <small class="text-muted ms-auto">#@appt.ReferenceNumber</small>
                                            </div>
                                            <div class="row mb-3 mt-3">
                                                <div class="col-sm-6"><p class="mb-0 small text-muted">Customer</p><p class="fw-bold mb-0">@appt.CustomerName</p></div>
                                                <div class="col-sm-6"><p class="mb-0 small text-muted">Time</p><p class="fw-bold mb-0">@appt.Time</p></div>
                                            </div>
                                            <div class="notes-box mb-3"><i class="fas fa-spa me-2"></i><strong>Category:</strong> @appt.Category</div>
                                            <form asp-action="CompleteAppointment" asp-controller="Dashboard" method="post">
                                                <input type="hidden" name="id" value="@appt.AppointmentId" />
                                                <button type="submit" class="btn btn-success btn-sm px-4 rounded-pill">Mark Completed</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="card p-5 text-center bg-white border"><h5 class="text-muted">No active bookings found.</h5></div>
                        }
                    </div>

                    <div class="tab-pane fade" id="history">
                        @if (completed.Any())
                        {
                            @foreach (var appt in completed)
                            {
                                <div class="card p-4 mb-3 border-start border-success border-5">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="fw-bold">@appt.ServiceName</h6>
                                        <span class="text-success small"><i class="fas fa-check-circle"></i> Completed</span>
                                    </div>
                                    <p class="small text-muted mb-0">Customer: @appt.CustomerName | Date: @appt.Date.ToShortDateString()</p>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="card p-5 text-center bg-white border"><h5 class="text-muted">No completed history.</h5></div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editProfileModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <form asp-action="UpdateProfile" asp-controller="Dashboard" method="post">
                    <div class="modal-header border-0 pb-0">
                        <h5 class="modal-title fw-bold">Update Professional Profile</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <input type="hidden" name="StaffId" value="@Model?.StaffId" />
                        <div class="mb-3">
                            <label class="form-label fw-bold small">Specialization</label>
                            <input type="text" name="Specialization" class="form-control bg-light border-0" value="@Model?.Specialization" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold small">Professional Bio</label>
                            <textarea name="Bio" class="form-control bg-light border-0" rows="3">@Model?.Bio</textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold small">Profile Picture URL</label>
                            <input type="text" name="ProfilePicture" class="form-control bg-light border-0" value="@Model?.ProfilePicture" />
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary" style="background-color: var(--primary-purple); border:none;">Save Profile</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>