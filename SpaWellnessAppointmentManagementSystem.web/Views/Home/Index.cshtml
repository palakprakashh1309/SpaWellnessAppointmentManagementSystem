@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = null;
    // Retrieve session data to determine UI state
    var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName");
    var userRole = HttpContextAccessor.HttpContext.Session.GetString("Role");
    bool isLoggedIn = !string.IsNullOrEmpty(userName);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Serenity Spa - Wellness & Spa Appointment System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/styles.css" />
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <span class="sparkles-icon me-2">✨</span>
                <span class="brand-text">Serenity Spa</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">

                    @if (!isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="#services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="contact">Contact</a>
                        </li>
                        <li class="nav-item ms-2">
                            <button class="btn btn-gradient" data-bs-toggle="modal" data-bs-target="#authModal">
                                Login / Register
                            </button>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="nav-link text-purple fw-bold">Welcome, @userName (@userRole)</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Customer">My Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Booking/Index">Book Service</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="btn btn-outline-danger btn-sm" asp-controller="Auth" asp-action="Logout">Logout</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <section class="hero-section py-5">
        <div class="container">
            <div class="row align-items-center py-5">
                <div class="col-lg-6 text-white">
                    <h1 class="display-3 fw-bold mb-4">Welcome to Paradise</h1>
                    <p class="lead mb-4">
                        Experience ultimate relaxation and rejuvenation with our premium spa and wellness services.
                        Your journey to tranquility starts here.
                    </p>
                    <div class="d-flex gap-3">
                        @if (!isLoggedIn)
                        {
                            <button class="btn btn-light btn-lg px-4" data-bs-toggle="modal" data-bs-target="#authModal">Book Now</button>
                        }
                        else
                        {
                            <a class="btn btn-light btn-lg px-4" asp-controller="Booking" asp-action="Index">Book Now</a>
                        }
                        <button class="btn btn-outline-light btn-lg px-4">Learn More</button>
                    </div>
                </div>
                <div class="col-lg-6 mt-4 mt-lg-0">
                    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                        <div class="hero-image">
                            <div class="text-center">
                                <div class="display-1 mb-3">✨</div>
                                <h3 class="text-purple">Premium Spa Experience</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5" id="services">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold mb-3">Our Services</h2>
                <p class="text-muted">Discover our range of premium wellness and spa treatments</p>
            </div>
            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100 hover-lift">
                        <div class="card-body text-center p-4 bg-gradient-purple text-white">
                            <div class="service-icon mb-3">💆</div>
                            <h5 class="card-title fw-bold">Massage Therapy</h5>
                            <button class="btn btn-light btn-sm mt-3" data-bs-toggle="modal" data-bs-target="#authModal">Explore</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100 hover-lift">
                        <div class="card-body text-center p-4 bg-gradient-blue text-white">
                            <div class="service-icon mb-3">✨</div>
                            <h5 class="card-title fw-bold">Facial Treatments</h5>
                            <button class="btn btn-light btn-sm mt-3" data-bs-toggle="modal" data-bs-target="#authModal">Explore</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100 hover-lift">
                        <div class="card-body text-center p-4 bg-gradient-green text-white">
                            <div class="service-icon mb-3">🌸</div>
                            <h5 class="card-title fw-bold">Body Treatments</h5>
                            <button class="btn btn-light btn-sm mt-3" data-bs-toggle="modal" data-bs-target="#authModal">Explore</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card border-0 shadow-sm h-100 hover-lift">
                        <div class="card-body text-center p-4 bg-gradient-orange text-white">
                            <div class="service-icon mb-3">🧘</div>
                            <h5 class="card-title fw-bold">Wellness Programs</h5>
                            <button class="btn btn-light btn-sm mt-3" data-bs-toggle="modal" data-bs-target="#authModal">Explore</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="py-5 bg-white">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="text-center p-4">
                        <div class="feature-icon mb-3">🏆</div>
                        <h5 class="fw-bold">Expert Therapists</h5>
                        <p class="text-muted">Certified professionals with years of experience</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center p-4">
                        <div class="feature-icon mb-3">📅</div>
                        <h5 class="fw-bold">Easy Booking</h5>
                        <p class="text-muted">Schedule appointments online 24/7</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center p-4">
                        <div class="feature-icon mb-3">🕐</div>
                        <h5 class="fw-bold">Flexible Hours</h5>
                        <p class="text-muted">Open 7 days a week for your convenience</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5 bg-light-gradient">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold mb-3">What Our Clients Say</h2>
                <p class="text-muted">Real experiences from our valued guests</p>
            </div>
            <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#testimonialCarousel" data-bs-slide-to="2"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="card border-0 shadow-lg mx-auto testimonial-card" style="max-width: 700px;">
                            <div class="card-body p-5 text-center">
                                <div class="mb-3">
                                    <span class="star-rating">⭐⭐⭐⭐⭐</span>
                                </div>
                                <p class="lead mb-4">"Best spa experience ever! The aromatherapy massage was divine."</p>
                                <h5 class="fw-bold text-purple">Sarah Johnson</h5>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="card border-0 shadow-lg mx-auto testimonial-card" style="max-width: 700px;">
                            <div class="card-body p-5 text-center">
                                <div class="mb-3">
                                    <span class="star-rating">⭐⭐⭐⭐⭐</span>
                                </div>
                                <p class="lead mb-4">"Professional staff and amazing facilities. Highly recommended!"</p>
                                <h5 class="fw-bold text-purple">Michael Chen</h5>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="card border-0 shadow-lg mx-auto testimonial-card" style="max-width: 700px;">
                            <div class="card-body p-5 text-center">
                                <div class="mb-3">
                                    <span class="star-rating">⭐⭐⭐⭐⭐</span>
                                </div>
                                <p class="lead mb-4">"The wellness programs changed my life. Thank you!"</p>
                                <h5 class="fw-bold text-purple">Emma Williams</h5>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon bg-dark rounded-circle"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon bg-dark rounded-circle"></span>
                </button>
            </div>
        </div>
    </section>

    <div class="modal fade" id="authModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="authTitle">Welcome Back</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="authForm">
                        <div class="mb-3 d-none register-only-fields">
                            <label class="form-label">Username</label>
                            <input type="text" class="form-control" name="Username">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" name="Email" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" name="Password" id="regPassword" required
                                   pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@@$!%*?&])[A-Za-z\d@@$!%*?&]{8,}$">
                            <div class="form-text register-only-fields d-none">Min. 8 characters: A-z, 0-9, & symbols.</div>
                        </div>
                        <div class="mb-3 d-none register-only-fields">
                            <label class="form-label">Phone Number</label>
                            <input type="tel"
                                   class="form-control"
                                   name="Phone"
                                   placeholder="Enter 10 digit number"
                                   maxlength="10"
                                   pattern="\d{10}"
                                   title="Please enter exactly 10 digits."
                                   oninput="this.value = this.value.replace(/[^0-9]/g, '');">
                            <div class="form-text">Example: 9876543210</div>
                        </div>
                        <div class="mb-3 d-none register-only-fields">
                            <label class="form-label">Location</label>
                            <input type="text" class="form-control" name="Location" placeholder="Delhi, India">
                        </div>

                        <div class="mb-3 d-none register-only-fields" id="roleGroup">
                            <label class="form-label">Role</label>
                            <select class="form-select" name="Role">
                                <option value="CUSTOMER">Customer</option>
                                <option value="STAFF">Staff</option>
                                <option value="ADMIN">Admin</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary w-100" id="submitBtn">Login</button>

                        <div class="text-center mt-3">
                            <button type="button" class="btn btn-link" id="toggleAuth">
                                Don't have an account? Sign up
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-dark text-white py-5">
        <div class="container text-center">
            <p class="mb-0">&copy; 2026 Serenity Spa. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            var isLogin = true;

            // TOGGLE LOGIC
            $('#toggleAuth').click(function () {
                isLogin = !isLogin;
                if (isLogin) {
                    $('#authTitle').text('Welcome Back');
                    $('#submitBtn').text('Login');
                    $('.register-only-fields').addClass('d-none');
                    $('#toggleAuth').text("Don't have an account? Sign up");
                } else {
                    $('#authTitle').text('Create Account');
                    $('#submitBtn').text('Create Account');
                    $('.register-only-fields').removeClass('d-none');
                    $('#toggleAuth').text('Already have an account? Login');
                }
            });

            // AJAX SUBMISSION
            $('#authForm').submit(function (e) {
                e.preventDefault();
                var url = isLogin ? '/Auth/Login' : '/Auth/Register';
                var formData = $(this).serialize();

                $.ajax({
                    url: url,
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            if (isLogin) {
                                // Redirect based on role logic from AuthController
                                window.location.href = response.redirectUrl;
                            } else {
                                alert("Registration successful! Please login.");
                                location.reload(); // Refresh to reset modal to login state
                            }
                        } else {
                            alert(response.message);
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>