@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Serenity Spa - Wellness & Spa Appointment System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/styles.css" />
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">✨ Serenity Spa</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item"><a class="nav-link" href="#services">Services</a></li>
                    <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
                    <li class="nav-item ms-2">
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#authModal">
                            Login / Register
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- HERO SECTION -->
    <section class="py-5 text-white" style="background: linear-gradient(135deg,#7b2ff7,#f107a3);">
        <div class="container">
            <div class="row align-items-center py-5">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold">Welcome to Paradise</h1>
                    <p class="lead">
                        Experience ultimate relaxation and rejuvenation with our premium spa services.
                    </p>
                    <a href="/Services" class="btn btn-light btn-lg">Book Now</a>
                </div>
                <div class="col-lg-6 mt-4 mt-lg-0 text-center">
                    <div class="card shadow-lg border-0 rounded-4">
                        <div class="card-body p-5">
                            <div class="display-1">✨</div>
                            <h3 class="text-primary">Premium Spa Experience</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- SERVICES -->
    <section class="py-5" id="services">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Our Services</h2>
                <p class="text-muted">Premium wellness treatments</p>
            </div>

            <div class="row g-4">
                <div class="col-md-3">
                    <div class="card text-center shadow-sm h-100">
                        <div class="card-body bg-primary text-white">
                            <h5>💆 Massage Therapy</h5>
                            <a href="/Services" class="btn btn-light btn-sm mt-3">Explore</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card text-center shadow-sm h-100">
                        <div class="card-body bg-info text-white">
                            <h5>✨ Facial Treatments</h5>
                            <a href="/Services" class="btn btn-light btn-sm mt-3">Explore</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card text-center shadow-sm h-100">
                        <div class="card-body bg-success text-white">
                            <h5>🌸 Body Treatments</h5>
                            <a href="/Services" class="btn btn-light btn-sm mt-3">Explore</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card text-center shadow-sm h-100">
                        <div class="card-body bg-warning text-white">
                            <h5>🧘 Wellness Programs</h5>
                            <a href="/Services" class="btn btn-light btn-sm mt-3">Explore</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FOOTER -->
    <footer class="bg-dark text-white py-4">
        <div class="container text-center">
            <p class="mb-0">© 2025 Serenity Spa. All rights reserved.</p>
        </div>
    </footer>

    <!-- AUTH MODAL -->
    <div class="modal fade" id="authModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="authTitle">Welcome Back</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="authForm">
                        <div class="mb-3 d-none" id="usernameGroup">
                            <label>Username</label>
                            <input type="text" class="form-control" id="username">
                        </div>

                        <div class="mb-3">
                            <label>Email</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>

                        <div class="mb-3">
                            <label>Password</label>
                            <input type="password" class="form-control" id="password" required>
                        </div>

                        <div class="mb-3 d-none" id="roleGroup">
                            <label>Role</label>
                            <select class="form-select" id="role">
                                <option value="CUSTOMER">Customer</option>
                                <option value="STAFF">Staff</option>
                                <option value="ADMIN">Admin</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>

                        <div class="text-center mt-3">
                            <button type="button" class="btn btn-link" id="toggleAuth">
                                Don't have an account? Sign up
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- SCRIPTS -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        @Html.Raw(@"
                                $(document).ready(function() {
                    var isLogin = true;

                                                $('#toggleAuth').click(function() {
                                isLogin = !isLogin;

                                                                $('#usernameGroup').toggleClass('d-none');
                                                                $('#roleGroup').toggleClass('d-none');

                                                                $('#authTitle').text(isLogin ? 'Welcome Back' : 'Create Account');
                                                                $('button[type=submit]').text(isLogin ? 'Login' : 'Create Account');
                                                                $('#toggleAuth').text(isLogin ? 'Don\\'t have an account ? Sign up' : 'Already have an account ? Login');
                                                });

                                                $('#authForm').submit(function(e) {
                                e.preventDefault();
                                var role = isLogin ? 'CUSTOMER' : $('#role').val();

                                if (role === 'ADMIN') window.location.href = '/Admin/Dashboard';
                                else if (role === 'STAFF') window.location.href = '/Staff/Dashboard';
                                else window.location.href = '/Customer/Profile';
                    });
        });
        ")
    </script>

</body>
</html>